{
  "name": "ramengo-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "husk": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn lint --fix"
    ]
  },
  "scripts": {
    "dev": "tsnd --exit-child --respawn --transpile-only --ignore-watch node_modules src/shared/infra/http/server.ts",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files",
    "start": "node ./dist/shared/infra/http/server.js",
    "lint": "eslint src/**/*.ts",
    "prepare": "husky install",
    "prisma:studio": "prisma studio --schema=./src/shared/infra/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=./src/shared/infra/prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema=./src/shared/infra/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^5.15.0",
    "celebrate": "^15.0.3",
    "express": "^4.19.2",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.7",
    "@babel/core": "^7.24.7",
    "@babel/plugin-proposal-decorators": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@eslint/js": "^9.5.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.2",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "eslint": "9.x",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.4.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "prisma": "^5.15.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.13.0"
  }
}